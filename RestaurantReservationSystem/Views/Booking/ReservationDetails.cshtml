@model IEnumerable<RestaurantReservationSystem.Models.Booking>

@{
    ViewData["Title"] = "My Reservations";
}

<table class="table">
    <thead>
        <tr>
            <th>Restaurant</th>
            <th>Booking Date</th>
            <th>Guests</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.Restaurant.Name</td>
                <td>@reservation.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@reservation.GuestsCount</td>
                <td>@(reservation.Status == 1 ? "Confirmed" : "Canceled")</td>
                <td>
                    <a href="@Url.Action("Edit", "Booking", new { id = reservation.BookingId })" class="btn btn-info btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Return", "Booking")" class="btn btn-secondary mt-3">Back to Dashboard</a>
