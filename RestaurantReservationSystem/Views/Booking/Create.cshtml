@{
    ViewData["Title"] = "Reserve a Table";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<!-- Restaurant Details Container -->
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">Reserve a Table</h5>
                    <p><strong>Restaurant:</strong> @ViewBag.RestaurantName</p>
                    <p><strong>Address:</strong> @ViewBag.RestaurantAddress</p>
                    <p><strong>Phone:</strong> @ViewBag.RestaurantPhone</p>
                    <p><strong>Email:</strong> @ViewBag.RestaurantEmail</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reservation Form Container -->
<div class="container mt-5">
    <form asp-controller="Booking" asp-action="Create" method="post" class="mt-4">
        <input type="hidden" name="RestaurantId" value="@ViewBag.RestaurantId" />

        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    <input type="text" class="form-control" id="FirstName" name="FirstName" value="@ViewBag.FirstName"
                        required />
                </div>
            </div>

            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" class="form-control" id="LastName" name="LastName" value="@ViewBag.LastName"
                        required />
                </div>
            </div>

            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number</label>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber"
                        value="@ViewBag.PhoneNumber" required />
                </div>
            </div>

            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@ViewBag.Email" required />
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="Guests">Number of Guests</label>
                        <input type="number" class="form-control" id="Guests" name="Guests" min="1" max="20" required />
                    </div>
                </div>

                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="ReservationDate">Reservation Date</label>
                        <input type="text" class="form-control" id="ReservationDate" name="ReservationDate" required />
                    </div>
                </div>

                <div class="col-md-4 mx-auto">
                    <div class="form-group">
                        <label for="ReservationTime">Reservation Time</label>
                        <select class="form-control" id="ReservationTime" name="ReservationTime" required>
                        </select>
                    </div>
                </div>

                <div class="row text-center mt-4">
                    <div class="col-md-6">
                        <a asp-controller="Booking" asp-action="Return"
                            class="btn btn-secondary btn-lg w-100">Return</a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-lg btn-success w-100">Reserve</button>
                    </div>
                </div>
            </div>
         </div>
    </form>
</div>

<script>
    flatpickr("#ReservationDate", {
    minDate: "today",
    disable: [
        function (date) {
            return date < new Date().setHours(0, 0, 0, 0);
        }
    ],
    dateFormat: "Y-m-d",
    onChange: function (selectedDates, dateStr, instance) {
        updateTimeSlots(selectedDates[0]);
    }
 });

    function updateTimeSlots(selectedDate) {
        const timeSelect = document.getElementById("ReservationTime");
        timeSelect.innerHTML = ''; 
        const currentDate = new Date();
        const selectedDateTime = new Date(selectedDate);

        const isToday = currentDate.toDateString() === selectedDateTime.toDateString();
        const startTime = new Date(selectedDateTime.setHours(10, 0, 0, 0)); 
        const endTime = new Date(selectedDateTime.setHours(20, 0, 0, 0)); 

        for (let time = startTime; time <= endTime; time.setHours(time.getHours() + 1)) {
            const option = document.createElement("option");
            const timeString = time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            if (isToday && time < currentDate) {
                option.disabled = true;
                option.text = timeString;
            } else if (isToday && currentDate.getMinutes() + 30 > time.getMinutes() && currentDate.getHours() === time.getHours()) {
                option.disabled = true;
                option.text = timeString;
            } else {
                option.disabled = false;
                option.text = timeString;
            }

            timeSelect.appendChild(option);
        }
    }
    updateTimeSlots(new Date());
</script>

