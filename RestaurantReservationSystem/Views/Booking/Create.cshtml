@model RestaurantReservationSystem.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Reserve a Table";
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<div class="container mt-5">
    <!-- Restaurant Details -->
    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-lg border-light rounded">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">Reserve a Table</h5>
                    <p><strong>Restaurant:</strong> @ViewBag.RestaurantName</p>
                    <p><strong>Address:</strong> @ViewBag.RestaurantAddress</p>
                    <p><strong>Phone:</strong> @ViewBag.RestaurantPhone</p>
                    <p><strong>Email:</strong> @ViewBag.RestaurantEmail</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservation Form -->
    <form asp-action="Create" asp-controller="Booking" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="RestaurantId" value="@Model.RestaurantId" />

        <div class="row">
            <!-- First Name -->
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <!-- Last Name -->
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <!-- Phone Number -->
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <!-- Email -->
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input asp-for="Email" class="form-control" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Guests -->
            <div class="col-md-4 mx-auto">
                <div class="form-group">
                    <label for="Guests">Number of Guests</label>
                    <input asp-for="Guests" class="form-control" min="1" max="20" required />
                    <span asp-validation-for="Guests" class="text-danger"></span>
                </div>
            </div>

            <!-- Reservation Date -->
            <div class="col-md-4 mx-auto">
                <div class="form-group">
                    <label for="ReservationDate">Reservation Date</label>
                    <input asp-for="ReservationDate" class="form-control flatpickr" required />
                    <span asp-validation-for="ReservationDate" class="text-danger"></span>
                </div>
            </div>

            <!-- Reservation Time -->
            <div class="col-md-4 mx-auto">
                <div class="form-group">
                    <label for="ReservationTime">Reservation Time</label>
                    <select asp-for="ReservationTime" class="form-control" required>
                        <option value="" disabled selected>Select a Time</option>
                    </select>
                    <span asp-validation-for="ReservationTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="row text-center mt-4">
            <div class="col-md-6">
                <a asp-controller="Booking" asp-action="Return" class="btn btn-secondary btn-lg w-100">Return</a>
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-lg btn-success w-100">Reserve</button>
            </div>
        </div>
    </form>
</div>

<script>
    flatpickr("#ReservationDate", {
    minDate: "today",
    disable: [
        function (date) {
            return date < new Date().setHours(0, 0, 0, 0);
        }
    ],
    dateFormat: "Y-m-d",
    onChange: function (selectedDates, dateStr, instance) {
        updateTimeSlots(selectedDates[0]);
    }
 });

    function updateTimeSlots(selectedDate) {
        const timeSelect = document.getElementById("ReservationTime");
        timeSelect.innerHTML = ''; 
        const currentDate = new Date();
        const selectedDateTime = new Date(selectedDate);

        const isToday = currentDate.toDateString() === selectedDateTime.toDateString();
        const startTime = new Date(selectedDateTime.setHours(10, 0, 0, 0)); 
        const endTime = new Date(selectedDateTime.setHours(20, 0, 0, 0)); 

        for (let time = startTime; time <= endTime; time.setHours(time.getHours() + 1)) {
            const option = document.createElement("option");
            const timeString = time.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            if (isToday && time < currentDate) {
                option.disabled = true;
                option.text = timeString;
            } else if (isToday && currentDate.getMinutes() + 30 > time.getMinutes() && currentDate.getHours() === time.getHours()) {
                option.disabled = true;
                option.text = timeString;
            } else {
                option.disabled = false;
                option.text = timeString;
            }

            timeSelect.appendChild(option);
        }
    }
    updateTimeSlots(new Date());
</script>

